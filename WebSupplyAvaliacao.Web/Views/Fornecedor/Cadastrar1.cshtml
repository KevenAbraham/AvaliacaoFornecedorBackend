@using WebSupplyAvaliacao.Dominio.Entidade
@model Fornecedor;


<head>
    <link rel="stylesheet" href="/css/fornecedor/register/cadastro1.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>


<div class="timeline"></div>

<form asp-controller="Fornecedor" asp-action="Cadastrar1" method="post">
    <div class="centeredItems">
        <div class="boxContainer">
            <h2 class="title">Cadastro de Fornecedor</h2>
            <div class="lineHorizontal"></div>
            <div class="inputs">
                <div class="leftBox">
                    <div class="entryarea">
                        <input type="text" required class="input" asp-for="NomeFantasia">
                        <div class="labelline">Nome Fantasia</div>
                    </div>
                    <div class="entryarea">
                        <input type="text" required class="input" asp-for="NomeContato">
                        <div class="labelline">Nome Completo</div>
                    </div>
                    <div class="cpfphone">
                        <div class="entryarea">
                            <input type="search" required class="inputnumber" asp-for="CNPJ">
                            <div class="labelline">CNPJ</div>
                        </div>
                        <div class="entryarea">
                            <input type="text" required class="inputnumber" asp-for="Telefone">
                            <div class="labelline">Telefone</div>
                        </div>
                    </div>
                    <div class="entryarea">
                        <input type="text" required class="input" asp-for="Email">
                        <div class="labelline">E-mail Corporativo</div>
                    </div>
                    <p class="descTitle">Caracterização da Pessoa Física</p>
                    <div class="checkboxBox">
                        <input type="checkbox" name="checkbox" id="checkbox"><label for="">Fabricante</label>
                        <input type="checkbox" name="checkbox" id="checkbox"><label for="">Distribuidora</label>
                        <input type="checkbox" name="checkbox" id="checkbox"><label for="">Prestação de Serviços</label>
                    </div>
                </div>
                <div class="lineVertical"></div>
                <div class="rightBox">
                    <div class="bairronum">
                        <div class="entryarea">
                            <input type="text" required class="inputnumber" asp-for="CEP">
                            <div class="labelline">CEP</div>
                        </div>
                        <div class="entryarea">
                            <button type="button" class="buscarCEP">Buscar CEP</button>
                        </div>
                    </div>
                    <div class="entryarea">
                        <input type="text" required class="input" asp-for="Endereco">
                        <div class="labelline">Endereço</div>
                    </div>
                    <div class="entryarea">
                        <input type="text" required class="input" asp-for="Complemento">
                        <div class="labelline">Complemento</div>
                    </div>
                    <div class="bairronum">
                        <div class="entryarea">
                            <input type="text" required class="inputnumber" asp-for="Numero">
                            <div class="labelline">Número</div>
                        </div>
                        <div class="entryarea">
                            <input type="text" required class="inputnumber" asp-for="Bairro">
                            <div class="labelline">Bairro</div>
                        </div>

                    </div>
                    <div class="bairronum">
                        <div class="entryarea">
                            <input type="text" required class="inputnumber" asp-for="Numero">
                            <div class="labelline">Número</div>
                        </div>
                        <div class="entryarea">
                            <select name="seila" id="seila">
                                <option value="teste">Estado</option>
                                <option value="teste">AC</option>
                                <option value="teste">AL</option>
                                <option value="teste">AP</option>
                                <option value="teste">AM</option>
                                <option value="teste">BA</option>
                                <option value="teste">CE</option>
                                <option value="teste">DF</option>
                                <option value="teste">ES</option>
                                <option value="teste">GO</option>
                                <option value="teste">MA</option>
                                <option value="teste">MT</option>
                                <option value="teste">MS</option>
                                <option value="teste">MG</option>
                                <option value="teste">PA</option>
                                <option value="teste">PB</option>
                                <option value="teste">PR</option>
                                <option value="teste">PI</option>
                                <option value="teste">PE</option>
                                <option value="teste">RJ</option>
                                <option value="teste">RN</option>
                                <option value="teste">RS</option>
                                <option value="teste">RO</option>
                                <option value="teste">RR</option>
                                <option value="teste">SC</option>
                                <option value="teste">SP</option>
                                <option value="teste">SE</option>
                                <option value="teste">TO</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="buttonNext">
        <button>Avançar</button>
    </div>
</form>
