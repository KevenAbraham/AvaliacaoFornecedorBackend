<head>
    <link rel="stylesheet" href="/css/fornecedor/register/cadastro2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <script src="/js/uploader.js"></script>
</head>

<div class="timeline"></div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Fornecedor" asp-action="Documento" method="post" enctype="multipart/form-data">
    <div class="centeredItems">
        <div class="boxContainer">
            <h2 class="title">Cadastro de Fornecedor</h2>
            <div class="lineHorizontal"></div>

            <div class="wrapper">
                <div class="box">
                    <div class="input-box">
                        <input type="file" hidden
                            id="upload" name="upload" accept=".doc,.docx,.pdf" enctype="multipart/form-data" multiple>
                        <label for="upload" class="uploadlabel">
                            <span><i class="fas fa-cloud-upload-alt"></i></span>
                            <p>Clique para Adicionar o Documento</p>
                        </label>
                        <!-- Elemento para exibir o contador de arquivos selecionados -->
                    </div>

                    <div id="filewrapper">
                        <div id="documentList" style="display: none"></div>
                        <span id="fileCounter"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <input type="hidden" name="fornecedorId" value="@ViewBag.FornecedorId" />
    <div class="buttonNext">
        <button type="submit">Avançar</button>
    </div>
</form>

<script src="/js/site.js"></script>
